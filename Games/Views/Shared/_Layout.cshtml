<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GAMES</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .c {
        background:red;
        border:none;
        }
        .navbar-inverse .navbar-brand {
        color:#000000;
        }
        .navbar-inverse .navbar-nav > li > a {
        color:#000000;
        font-weight:bold;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top c">
        <div class="container" >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"style="color:#000000;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GAMES", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" >
                    <li style="color:#000000">@Html.ActionLink("Number Game", "NumberGame", "Home")</listyle="color:#000000">
                    <li>@Html.ActionLink("Spaceship Game", "SpaceshipGame", "Home")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
